{
  "env": {
    "node": true,
    "browser": true
  },
  "extends": ["eslint:recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "rules": {
    "quotes": ["error", "double"],
    "indent": ["error", 2],
    "semi": ["error", "always"]
  }
}
